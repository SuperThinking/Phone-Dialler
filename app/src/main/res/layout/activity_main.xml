<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="straightforwardapps.decthree.MainActivity"
    android:background="#332170"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number"
        android:id="@+id/num_show"
        android:textAlignment="center"
        android:cursorVisible="false"
        android:textSize="30dp"
        android:textColor="#fff"
        android:textColorHint="#e9e9e9"
        android:onClick="swipe"
        />

    <TableLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/a1"
                android:onClick="addnum1"
                android:textSize="30dp"
                android:textColor="#fff"
                android:background="@drawable/num_but"
                />
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="30dp"
                android:textColor="#fff"
                android:id="@+id/a2"
                android:onClick="addnum2"
                android:background="@drawable/num_but"

            />
            <Space
                android:layout_width="5dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/a3"
                android:textSize="30dp"
                android:textColor="#fff"
                android:onClick="addnum3"
                android:background="@drawable/num_but"
                />
        </TableRow>
        <TableRow>
            <Space
                android:layout_width="5dp"
                android:layout_height="10dp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/a4"
                android:onClick="addnum4"
                android:background="@drawable/num_but"
                android:textSize="30dp"
                android:textColor="#fff"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/a5"
                android:onClick="addnum5"
                android:background="@drawable/num_but"
                android:textSize="30dp"
                android:textColor="#fff"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/a6"
                android:onClick="addnum6"
                android:background="@drawable/num_but"
                android:textSize="30dp"
                android:textColor="#fff"/>
        </TableRow>
        <TableRow>
            <Space
                android:layout_width="5dp"
                android:layout_height="10dp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7"
                android:id="@+id/a7"
                android:onClick="addnum7"
                android:background="@drawable/num_but"
                android:textSize="30dp"
                android:textColor="#fff"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:id="@+id/a8"
                android:onClick="addnum8"
                android:background="@drawable/num_but"
                android:textSize="30dp"
                android:textColor="#fff"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                android:id="@+id/a9"
                android:onClick="addnum9"
                android:background="@drawable/num_but"
                android:textSize="30dp"
                android:textColor="#fff"/>
        </TableRow>
        <TableRow>
            <Space
                android:layout_width="5dp"
                android:layout_height="10dp"
                />
        </TableRow>
        <TableRow>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/del"
                android:text="@string/delete"
                android:textSize="30dp"
                android:textColor="#fff"
                android:onClick="dell"
                android:background="@drawable/num_but"/>
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/a0"
                android:background="@drawable/num_but"
                android:onClick="addnum0"
                android:textSize="30dp"
                android:textColor="#fff"
                />
            <Space
                android:layout_width="15dp"
                android:layout_height="0dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/del_all"
                android:onClick="clear"
                android:textSize="30dp"
                android:textColor="#fff"
                android:background="@drawable/num_but"
                />
        </TableRow>
    </TableLayout>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="callbaby"
        android:background="@drawable/call"/>
</RelativeLayout>
